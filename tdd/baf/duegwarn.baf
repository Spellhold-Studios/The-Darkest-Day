IF
  Global("duegalert","GLOBAL",0)
  See([PC])
  Range([PC],20)
THEN
  RESPONSE #100
    StartDialogNoSet([PC])
END

IF
  Global("duegalert","GLOBAL",1)
THEN
  RESPONSE #100
    DisplayStringHead(Myself,~Intruders! Kill the intruders!~)
    MoveToPoint([809.1791])
    SetGlobal("duegalert","GLOBAL",2)
    Wait(5)
    DestroySelf()
END

