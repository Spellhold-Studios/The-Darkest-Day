IF
  Global("P2in_body","LOCALS",1)
  OR(2)
    !Exists(Player2)
    HPLT(Player2,2)
THEN
  RESPONSE #100
    ActionOverride(Player2,DestroyItem("DDRAVE05"))
    Kill(Player2)
    ChangeEnemyAlly(Player2,PC)
    SetGlobal("P2in_body","LOCALS",0)
    UseItem("DDrave04",Myself)
    DestroyItem("DDRAVE03")
    DestroyItem("MINHP1")
    CreateVisualEffectObject("SPDEATH3",Player2)
    SetGlobalTimer("repossess","LOCALS",15)
END

