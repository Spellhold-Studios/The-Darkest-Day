IF
  Global("fight","LOCALS",1)
  Global("in_body","LOCALS",0)
  !Detect(Player2)
  !Detect(Player3)
  !Detect(Player4)
  !Detect(Player5)
  !Detect(Player6)
THEN
  RESPONSE #100
    DestroyItem("MINHP1")
    SetGlobal("in_body","LOCALS",1)
END

IF
  Global("in_body","LOCALS",0)
  Global("P2in_body","LOCALS",0)
  Global("fight","LOCALS",1)
  HPGT(Player2,0)
  Detect(Player2)
THEN
  RESPONSE #100
    UseItem("DDrave02",Player2)
    ChangeEnemyAlly(Player2,ENEMY)
    SetGlobal("P2in_body","LOCALS",1)
    CreateVisualEffectObject("SPDEATH3",Myself)
    SetGlobal("in_body","LOCALS",1)
  RESPONSE #100
    Continue()
END

