  Global("fight","LOCALS",1)
  Global("P2in_body","LOCALS",0)
  Global("P3in_body","LOCALS",0)
  Global("P4in_body","LOCALS",0)
  Global("P5in_body","LOCALS",0)
  Global("P6in_body","LOCALS",0)
  Global("in_body","LOCALS",1)
THEN
  RESPONSE #100
    AttackReevaluate(NearestEnemyOf(Myself),15)
END

