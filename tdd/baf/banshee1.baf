IF
  HPLT(Myself,2)
THEN
  RESPONSE #100
    SetGlobal("bansheedie","GLOBAL",1)
END

IF
  Global("prep1","LOCALS",0)
  See(NearestEnemyOf(Myself))
  Range(NearestEnemyOf(Myself),4)
THEN
  RESPONSE #100
    ApplySpell(Myself,WIZARD_IMPROVED_MANTLE)
    SetGlobal("prep1","LOCALS",1)
    SetGlobalTimer("banseeprep","GLOBAL",25)
END

IF
  GlobalTimerExpired("banseeprep","GLOBAL")
  Global("prep1","LOCALS",1)
THEN
  RESPONSE #100
    ApplySpell(Myself,WIZARD_IMPROVED_MANTLE)
    SetGlobal("prep1","LOCALS",2)
END

IF
  HPLT(Myself,35)
  Global("bansheeheal","LOCALS",0)
THEN
  RESPONSE #100
