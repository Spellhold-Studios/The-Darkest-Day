IF
  Global("bansheeb","LOCALS",0)
  Range(NearestEnemyOf(Myself),8)
THEN
  RESPONSE #100
    SetGlobal("bansheeb","LOCALS",1)
    ForceSpell(NearestEnemyOf(Myself),WIZARD_SYMBOL_FEAR)
    ForceSpell(SecondNearestEnemyOf(Myself),WIZARD_SYMBOL_FEAR)
    SetGlobalTimer("bansheeFear","GLOBAL",28)
END

IF
  GlobalTimerExpired("bansheeFear","GLOBAL")
  See(NearestEnemyOf(Myself))
THEN
  RESPONSE #100
    ForceSpell(NearestEnemyOf(Myself),WIZARD_SYMBOL_FEAR)
    ForceSpell(SecondNearestEnemyOf(Myself),WIZARD_SYMBOL_STUN)
END

IF
  Global("bansheec","LOCALS",0)
  See(NearestEnemyOf(Myself))
